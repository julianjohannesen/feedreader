{
    "opts": {
        "template": "./node_modules/ink-docstrap/template",
        "encoding": "utf8",
        "destination": "./docs/",
        "recurse": true,
        "tutorials": ""
    },
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": ["./", "./js/", "./css/", "./spec/"],
        "exclude": ["./docs/", "./jasmine/", "./fonts/", "./node_modules/"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
        },
        "systemName"            : "",
        "footer"                : "",
        "copyright"             : "",
        "includeDate"           : true,
        "navType"               : "vertical",
        "theme"                 : "cerulean",
        "linenums"              : false,
        "collapseSymbols"       : true,
        "inverseNav"            : false,
        "outputSourceFiles"     : true,
        "outputSourcePath"      : true,
        "dateFormat"            : "dddd, MMMM Do YYYY, h:mm:ss a",
        "syntaxTheme"           : "default",
        "sort"					: true,
        "search"                : true 
    }
}